<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentationn.screens.feature.home.morefragment.MenuFragment">

    <TextView
        android:id="@+id/lang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/menu_item_back"
        android:text="@string/lang"
        android:textSize="18dp"
        android:padding="12dp"
        android:drawableEnd="@drawable/ic_arrow"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:drawableRight="@drawable/ic_arrow"/>

    <TextView
        android:id="@+id/currency"
        app:layout_constraintTop_toBottomOf="@+id/lang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/menu_item_back"
        android:text="@string/cuurency"
        android:textSize="18dp"
        android:padding="12dp"
        android:drawableEnd="@drawable/ic_arrow"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:drawableRight="@drawable/ic_arrow" />


    <TextView
        android:id="@+id/charge"
        app:layout_constraintTop_toBottomOf="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/menu_item_back"
        android:text="@string/chargeaddress"
        android:textSize="18dp"
        android:padding="12dp"
        android:drawableEnd="@drawable/ic_arrow"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:drawableRight="@drawable/ic_arrow" />
    <TextView
        android:id="@+id/chat"
        app:layout_constraintTop_toBottomOf="@+id/charge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/menu_item_back"
        android:text="@string/contact"
        android:textSize="18dp"
        android:padding="12dp"
        android:drawableEnd="@drawable/ic_arrow"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:drawableRight="@drawable/ic_arrow" />

